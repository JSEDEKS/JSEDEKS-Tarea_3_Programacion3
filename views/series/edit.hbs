<h1 class="mb-4">Editar serie</h1>

<form method="POST" action="/series/edit/{{serie.id}}">
  <div class="mb-3">
    <label class="form-label">Nombre de la serie</label>
    <input type="text" name="name" class="form-control" value="{{serie.name}}" required>
  </div>

  <div class="mb-3">
    <label class="form-label">Imagen de portada (URL)</label>
    <input type="text" name="image" class="form-control" value="{{serie.image}}" required>
  </div>

  <div class="mb-3">
    <label class="form-label">Enlace del video (YouTube embed)</label>
    <input type="text" name="video" class="form-control" value="{{serie.video}}" required>
  </div>

  <div class="mb-3">
    <label class="form-label">GÃ©nero</label>
    <select name="genre" class="form-select" required>
      {{#each genres}}
        <option value="{{this.name}}" {{#if (eq this.name ../serie.genre)}}selected{{/if}}>{{this.name}}</option>
      {{/each}}
    </select>
  </div>

  <a href="/series" class="btn btn-secondary">Volver</a>
  <button type="submit" class="btn btn-primary">Guardar</button>
</form>
